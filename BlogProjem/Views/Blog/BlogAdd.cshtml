@model Entity.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h1>Add New Blog</h1>
<br />

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Title of Blog")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTitle)
    <br />

    @Html.Label("Image of Blog")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })


    @Html.Label("Category of Blog")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />

    @Html.Label("Content of Blog")
    @Html.TextBoxFor(x => x.BlogContent, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />

    <button class="btn btn-info">Save</button>

}

