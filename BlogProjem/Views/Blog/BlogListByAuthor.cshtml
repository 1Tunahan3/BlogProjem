@using Entity.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByAuthor";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h1>Blogs Of Author</h1>
<table class="table-bordered">
    <tr>
        <th>#</th>
        <th>Title of Blog</th>
        <th>Create Date</th>
        <th>Category</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Edit</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn-danger">Delete</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn-warning">Edit</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn-dark">Create New Blog</a>

